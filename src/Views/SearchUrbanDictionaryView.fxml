<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="477.0" prefWidth="801.0" stylesheets="@styles.css" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controllers.SearchUrbanDictionaryViewController">
    <children>
        <VBox stylesheets="@styles.css">
            <children>
                <HBox alignment="CENTER" prefHeight="72.0" prefWidth="601.0" stylesheets="@styles.css">
                    <children>
                        <Label text="Enter search term">
                            <font>
                                <Font size="14.0" />
                            </font>
                        </Label>
                        <TextField fx:id="searchTextField" text="Enter search term">
                            <font>
                                <Font size="14.0" />
                            </font>
                        </TextField>
                        <Button fx:id="searchBtn" mnemonicParsing="false" onAction="#getDefinitions" text="Search for Term">
                            <font>
                                <Font size="14.0" />
                            </font>
                        </Button>
                    </children>
                </HBox>
                <HBox stylesheets="@styles.css">
                    <VBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                    </VBox.margin>
                    <children>
                        <ListView fx:id="definitionListView" prefHeight="303.0" prefWidth="581.0" />
                        <StackPane stylesheets="@styles.css">
                            <children>
                                <ImageView fx:id="movieImageView" fitHeight="308.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true" />
                            </children>
                        </StackPane>
                    </children>
                </HBox>
                <Label fx:id="rowsReturnedLabel" text="rows">
                    <font>
                        <Font size="14.0" />
                    </font>
                </Label>
            </children>
        </VBox>
    </children>
</AnchorPane>
